@model AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" class="form-control" asp-items="Model.Employers"></select>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>

    <br />

    <input type="submit" value="Add Job" />
</form>